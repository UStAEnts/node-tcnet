{
    "compilerOptions": {
        // Output related
        "target": "esnext",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,

        // Module resolution
        "moduleResolution": "node",

        // Type checking
        "lib": ["esnext"],
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,

        "module": "CommonJS",
        "types": ["node"],
        "outDir": "./dist",
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": ["src/**/*", "@types/**/*"]
}
